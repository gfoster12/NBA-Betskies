# Copy this file to .env and fill in the secrets before running ParlayLab NBA.

BALLDONTLIE_API_KEY=your_balldontlie_key_here  # Ingestion + odds from BallDontLie API
OPENAI_API_KEY=your_openai_api_key_here         # LLM explanations + marketing agent
OPENAI_MODEL=gpt-5.1-pro
DATABASE_URL=sqlite:///./parlaylab.db

# Optional email/SMS for notifications (Streamlit + scheduler will read these)
EMAIL_HOST=smtp.example.com        # SMTP host for NotificationService
EMAIL_PORT=587                     # SMTP port (STARTTLS)
EMAIL_USER=your_smtp_username
EMAIL_PASSWORD=your_smtp_password
EMAIL_FROM=parlaylab@example.com

TWILIO_ACCOUNT_SID=your_twilio_account_sid  # SMS backend (notifications/scheduling)
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=+10000000000
ADMIN_PASSWORD=change_me
KELLY_FRACTION=0.25
EDGE_THRESHOLD=0.05
MAX_CORRELATION_SCORE=0.8
CORRELATION_PENALTY_WEIGHT=0.25
SCHEDULER_RUN_HOUR=9
SMS_RATE_LIMIT_PER_MINUTE=30
